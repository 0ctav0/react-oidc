{
  "version": "1.0.2",
  "command": {
    "publish": {
      "message": "chore(release): publish %s [ci skip]",
      "npmClient": "npm",
      "ignoreChanges": [
        "ignored-file",
        "*.md",
        ".npmrc"
      ]
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "packages": [
    "examples/*",
    "packages/*"
  ]
}
